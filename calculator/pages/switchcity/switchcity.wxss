.now-city {
  background: #f2f4f5;
  font-size: 22rpx;
	color: #a8a8a8;
  padding: 18rpx 20rpx;
  border-bottom: 1rpx solid #dbdbdb;
}
.now-city .hot-title{
    margin-bottom:5px;
}
.now-city .weui-flex{
margin:0 30rpx;
}
.now-city .hot-city-name {
  display: flex;
  background: white;
  font-size: 28rpx;
	color: #1aad19;
  border: solid 1rpx #1aad19;
  border-radius:3px;
  margin: 5px;
padding: 0 10px;
height: 2em;
line-height: 2em;
justify-content: center;
}
.alphabet-list .section-item .section-item-header {
  display: flex;
  align-items: center;
  font-size: 22rpx;
	color: #a8a8a8;
	background-color: #f2f4f5;
  padding: 4rpx 20rpx;
}

.alphabet-list .section-item .section-item-cells {
  padding:0 50rpx 0 20rpx;
}
.alphabet-list .section-item .section-item-cells .section-item-cell{
  font-size: 30rpx;
	line-height: 1.0;
	color: #333333;
  padding: 29rpx 0;
	width: auto;
	height: auto;
	display: block;
}
.border-bottom {
  border-bottom: 1rpx solid #dbdbdb;
}
.alphanet-selector {
  position: absolute;
  top: 120rpx;
  right: 0;
  height: 432px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 100;
  box-sizing: border-box;
}
.alphanet-selector .selector-one {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
	color: #1AAD19;
  padding: 2px 3px;
  height: 12px;
}
