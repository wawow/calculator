<!--index.wxml-->
<view class="page">
	<view class="weui-cells weui-cells_after-title font16">
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">城市</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="changeCity" value="{{cityIndex}}" range="{{city}}">
                    <view class="weui-select weui-select_in-select-after">{{city[cityIndex]}}</view>
                </picker>
            </view>
        </view>
		<view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">月薪(元)</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" bindinput="setMoney" type="number" value="{{money}}" placeholder="请输入月薪" focus="true"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">社保基数</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" bindinput="setInsurance" type="number" value="{{insurance}}"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">公积金基数</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" bindinput="setFund" type="number" value="{{fund}}"/>
            </view>
        </view>
	</view>
	<view class="weui-btn-area">
        <button class="weui-btn" bindtap="count" type="primary">计算</button>
    </view>
    <view class="page__bd" style="display:{{show}}">
        <view class="weui-cells__title">工资明细</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">税后工资</view>
                <view class="weui-cell__ft">￥{{postTaxWage}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">个人所得税</view>
                <view class="weui-cell__ft">￥{{individualIncomeTax}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">养老保险金(8%)</view>
                <view class="weui-cell__ft">￥{{yanglao}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">医疗保险金(2%)</view>
                <view class="weui-cell__ft">￥{{yiliao}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">失业保险金(0.2%)</view>
                <view class="weui-cell__ft">￥{{shiye}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">住房公积金({{gjjBl}}%)</view>
                <view class="weui-cell__ft">￥{{zhufang}}</view>
            </view>
        </view>
    </view>
</view>
